{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "moduleResolution":"node",
    "outDir": "dist",
    "lib": [
      "decorators",
      "dom",
      "es5",
      "es6",
      "scripthost",
      "es2015.promise"
    ]
  },
  "include": ["src/**/*", "index.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", "**/*__tests__"]
}